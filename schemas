from pydantic import BaseModel , ConfigDict
from datetime import datetime
from typing  import Optional




class UserCreate(BaseModel):
    user_licensenumber: str
    user_fname: str
    user_lname: str
    user_phonenumber: str
    user_email: Optional[str]
    user_password: Optional[str]


class UserLogin(BaseModel):
    user_licensenumber: str
    user_password: str



class NotificationBase(BaseModel):
    notification_message: str
    notification_senttimestamp: datetime
    notification_status: str
    violation_id: int
    licence_number: str


class NotificationCreate(NotificationBase):
    pass



class RuleViolationCreate(BaseModel):
    violation_type: str
    violation_timesstamp: Optional[datetime]
    violation_status: str
    vechicle_id: int
    video_id: int


class VehicleCreate(BaseModel):
    vehicle_type: str
    vehicle_licenceplate_number: str

class VehicleOwnershipCreate(BaseModel):
    vechicle_id: int
    user_licenseNumber: str
    current_ownership: bool

class VideoCreate(BaseModel):
    video_path: str
    uploadtime_stamp: Optional[datetime]
    uploadedbyID: int

